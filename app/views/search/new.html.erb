<h1>New Search</h1>

<section class='search-box'>
  <%= form_tag('/search', method: :get) do %>
  <div class="body-choices">
    <% celestial_bodies.each do |body| %>
        <div class='check-box'%>
          <%= check_box_tag 'bodies[]', body.name %>
          <%= label_tag body.name %>
        </div>
    <% end %>
  </div>
    <p id='location'>
      <%= label_tag :location %>
      <input type="input-field" name="location" title="location" id="location" placeholder="A street address A city or neighborhood A Postal Code A point of interest such as a public park" class="location-field">
    </p>
    <p id='submit'>
      <%= submit_tag("Search") %>
    </p>
  <% end %>
</section>
